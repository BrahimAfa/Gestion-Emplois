@model GestionEmploi.Models.Group
@{
    ViewBag.Title = "Cree_Group";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cree_Group</h2>

<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

@Styles.Render("~/Content/form.css")


@using (Html.BeginForm("ajouter_group", "Group", FormMethod.Post))

{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container">
        <div class="form-group">
            @if (Model != null && Model.GroupId> 0)
            {
                @Html.HiddenFor(x => x.GroupId)
            }
            <div class="container mt-5 mb-5">
                <div class="row d-flex align-items-center justify-content-center">
                    <div class="col-md-6">
                        <div class="card px-5 py-5">
                            <span class="circle"><i class="fa fa-check"></i></span>
                            <h5 class="mt-3">Ajouter Un nouveau Group </h5>
                            <div class="form-input">
                                <i class="fa fa-user"></i>
                                @Html.TextBoxFor(x => x.Libelle, new { placeholder = "Libelle", @class = "form-control" })

                            </div>

                           
                            

                            <div> <input type="submit" value="Ajouter" class=" btn-success mt-4 signup" /> </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>



   



   

    



