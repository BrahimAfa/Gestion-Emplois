@model GestionEmploi.Models.Niveau
@{
    ViewBag.Title = "Local";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/form.css")


@using (Html.BeginForm("AddNiveau", "Niveau", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            @if (Model != null && Model.NiveauId > 0)
            {
                @Html.HiddenFor(x => x.NiveauId)
            }
            <div class="container mt-5 mb-5">
                <div class="row d-flex align-items-center justify-content-center">
                    <div class="col-md-6">
                        <div class="card px-5 py-5">
                            <span class="circle"><i class="fa fa-check"></i></span>
                            <h5 class="mt-3">Ajouter une Niveau </h5>
                            <div class="form-input">
                                <i class="fa fa-user"></i>
                                @Html.TextBoxFor(x => x.libelle, new { placeholder = "Libelle", @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.libelle, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-input">
                                <i class="fa fa-user"></i>
                                @Html.TextBoxFor(x => x.Code, new { placeholder = "Code", @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Code, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-input">
                                <i class="fa fa-user"></i>
                                @Html.DropDownListFor(x => x.FiliereId, ViewBag.filieres as SelectList, "Selecte filierer", new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.FiliereId, "", new { @class = "text-danger" })

                            </div>
                            <div> <input type="submit" value="Ajouter" class="btn btn-primary mt-4 signup" /> </div>
                        </div>
                    
                    </div>

                </div>
            </div>
        </div>
    </div>

   





}
