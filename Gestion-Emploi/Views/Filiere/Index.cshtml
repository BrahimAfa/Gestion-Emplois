@model IEnumerable<GestionEmploi.Models.Filiere>

@Styles.Render("~/Content/Filiere.css")

<div class="container">
    @Html.ActionLink("+ Add", "Create",null,null, new { @class = "btn btn-primary" })
  
    <br />
    <br />
    <div class="table-responsive">
        <table class="table text-center">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Libelle</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>


                @foreach (var filier in ViewData["list"] as IEnumerable<GestionEmploi.Models.Filiere>)
                {
                    <tr>

                        <td> @filier.FiliereId</td>
                        <td>@filier.Libelle</td>

                        <td>
                            <a href="@Url.Action("Delete",new { id = filier.FiliereId})" class="btn btn-danger">Delete</a>
                            <a href="@Url.Action("Edit",new { id = filier.FiliereId})" class="btn btn-success">Edit</a>
                        
                        </td>

                    </tr>




                }


            </tbody>
        </table>

       </div>
