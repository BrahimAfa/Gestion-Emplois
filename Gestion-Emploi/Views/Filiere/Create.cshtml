@model GestionEmploi.Models.Filiere
@{
    ViewBag.Title = "Local";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/form.css")



@using (Html.BeginForm("AddFiliere", "Filiere", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container">
        <div class="form-group">
            @if (Model != null && Model.FiliereId > 0)
            {
                @Html.HiddenFor(x => x.FiliereId)
            }
            <div class="container mt-5 mb-5">
                <div class="row d-flex align-items-center justify-content-center">
                    <div class="col-md-6">
                        <div class="card px-5 py-5">
                            <span class="circle"><i class="fa fa-check"></i></span>
                            <h5 class="mt-3">Ajouter une Filiere </h5>
                            <div class="form-input">
                                <i class="fa fa-user"></i>
                                @Html.TextBoxFor(x => x.Libelle, new { placeholder = "Libelle", @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Libelle, "", new { @class = "text-danger" })

                            </div>
                            <div> <input type="submit" value="Ajouter" class="btn btn-primary mt-4 signup" /> </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>







}
