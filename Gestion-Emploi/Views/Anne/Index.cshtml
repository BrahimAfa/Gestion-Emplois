@model IEnumerable<GestionEmploi.Models.Annee>
@{
    ViewBag.Title = "AJouter_Annee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AJouter_Annee</h2>




<div class="container">



    @Html.ActionLink("+ Add", "Create", null, null, new { @class = "btn btn-primary" })
   
    <br />
    <br />
    <div class="table-responsive">
        <table class="table text-center">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Libelle</th>
                    <th>Date de debut</th>
                    <th>Date de Fin</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var annee in ViewData["list"] as IEnumerable<GestionEmploi.Models.Annee>)
                {
                    <tr>
                        <td> @annee.AnneeId</td>
                        <td> @annee.Libelle</td>
                        <td>@annee.DateDebut</td>
                        <td>@annee.DateFin</td>

                        <td class="d-flex accordion-collapse ">
                            @using (Html.BeginForm("Delete", "Anne", new { id = annee.AnneeId, FormMethod.Post }))
                            {
                                @Html.AntiForgeryToken()

                                <input class="btn btn-danger" type="submit" value="delete" />
                            }

                            @using (Html.BeginForm("EDIT", "Anne", new { id = annee.AnneeId, FormMethod.Post }))
                            {
                                @Html.AntiForgeryToken()

                                <button class="btn btn-success" >UPDATE</button>
                            }
                            <button class="btn btn-info">Info</button>
                        </td>
                    </tr>




                }

            </tbody>
        </table>
    </div>

</div>