@model GestionEmploi.Models.Professor
@{
    ViewBag.Title = "EditeProfessor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/form.css")


@using (Html.BeginForm("EditProfessorDb", "Professor", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            @if (Model != null && Model.ProfessorId > 0)
            {
                @Html.HiddenFor(x => x.ProfessorId)
            }
            <div class="container mt-5 mb-5">
                <div class="row d-flex align-items-center justify-content-center">
                    <div class="col-md-6">
                        <div class="card px-5 py-5">
                            <span class="circle"><i class="fa fa-check"></i></span>
                            <h5 class="mt-3">Modifier une Professeur </h5>
                            <div class="form-input">
                                <label>Nom</label>
                                @Html.TextBoxFor(x => x.LastName, new { placeholder = "ecrire le nom", @class = "form-control" })
                            </div>
                            <div class="form-input">
                                <label>Prenom</label>
                                @Html.TextBoxFor(x => x.FirstName, new { placeholder = "ecrire le prenom", @class = "form-control" })
                            </div>
                            <div class="form-input">
                                <label>Email</label>
                                @Html.TextBoxFor(x => x.Email, new { placeholder = "ecrire l'email", @class = "form-control" })
                            </div>
                            <div>
                                <input type="submit" value="Modifier" class="btn btn-primary mt-4 signup" />
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>

    </div>
}

