@model IEnumerable<GestionEmploi.Models.Professor>

@{
    ViewBag.Title = "ListProfessor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Liste des Professeur</h2>
<div class="container">
    @Html.ActionLink("+ Add", "AddProfessor", null, null, new { @class = "btn btn-primary" })

    <br />
    <br />
    <div class="table-responsive">
        <table class="table text-center">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Email</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>


                @foreach (var prof in ViewData["list"] as IEnumerable<GestionEmploi.Models.Professor>)
                {
                    <tr>

                        <td>@prof.LastName</td>
                        <td>@prof.FirstName</td>
                        <td>@prof.Email</td>

                        <td>
                            <a href="@Url.Action("Delete",new { id = prof.ProfessorId})" class="btn btn-danger">Delete</a>


                            <a href="@Url.Action("EditeProfessor",new { id = prof.ProfessorId})" class="btn btn-success">Updtae</a>
                        </td>

                    </tr>




                }


            </tbody>
        </table>
    </div>
</div>

